<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title></title>
</head>
<style type="text/css">
    body{
        max-width: 80%;
        height: auto;
        margin: 0 auto;
    }
    main{

    display: flex;
    flex-direction: row;
    width: 90%;
    justify-content: center;
    height: 70vh;
        margin-top: 33px;
    }

    .right-bar{
     display: flex;
    flex-direction: column;
    align-self: end;
    flex-grow: 0.6;
    }

    .messageDisplay{
            display: flex;
    overflow: scroll;
    flex-direction: column;
    align-items: flex-start;
        background-color: coral;
    height: 67vh;
}
    .left-bar{
            background-color: aquamarine;
    }
</style>
<script>
    
</script>
<body>
<main>
    <div class="left-bar">
           <div class="top-part">
        <form action="/lobby/create" method="POST">
    <input type="text" name="" placeholder="Enter lobby name">
    <button type="submit">Create Lobby</button>
</form>
        </div>
                <div class="teamRoom">
            <h3>Team Chat</h3>
        </div>
    </div>
    <div class="right-bar">
            <div class="messageDisplay">
                <% if (Array.isArray(messages)) { %>
  <% messages.forEach((message) => { %>
    <p><%= message.username %>: <%= message.message %></p>
  <% }) %>
<% } else { %>
  <p>No messages</p>
<% } %>
            </div>
                <div class="sendMessege-area">
              <<div class="sendMessege-area">
  <form action="/lobby/<%= name %>/<%= lobby_id %>/room/chat" method="POST">
    <input type="hidden" name="lobby_id" value="<%= lobby_id %>">
    <input type="text" name="msg">
    <button type="submit">Send</button>
  </form>
</div>


        </div>
            <div class="chat-area"> 
        </div>
    </div>
</main>

</body>
</html>